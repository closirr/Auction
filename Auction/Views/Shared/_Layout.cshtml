<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src='@Url.Content("~/Scripts/jquery-1.12.4.js")' type="text/javascript"></script>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/all.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/Layout.css")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js") 

</head>
<body>
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.css" rel="stylesheet">
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js"></script>

<div class="container">
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid navbar-border">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><i class="fa fa-home"></i> Brand</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li> <a href="#"><i class="fa fa-building"></i> About</a></li>
                    <li><a href="#"><i class="fa fa-phone"></i> Contact</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-anchor"></i> Support <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#"><i class="fa fa-envelope"></i> Email</a></li>
                            <li><a href="#"><i class="fa fa-comments"></i> Chat</a></li>
                            <li><a href="#"><i class="fa fa-phone"></i> Phone Support</a></li>
                            <li class="divider"></li>
                            <li class="active"><a href="#"><i class="fa fa-credit-card"></i> Make a Payment</a></li>
                        </ul>
                    </li>
                    <li>
                        <form class="navbar-form" role="search">
                            <div class="input-group">
                                <input type="text"class ="form-control"name="name" data-autocomplete-source='@Url.Action("AutocompleteSearch", "Lot")'/> 
                                <div class="input-group-btn">    <!-- Categories search  -->
                                    <button type="button" class="btn btn-search btn-default dropdown-toggle br0" data-toggle="dropdown">
                                        <span class="label-icon">Category</span>
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu pull-left" role="menu">
                                        <li>
                                            <a href="#">
                                                <span class="glyphicon glyphicon-user"></span>
                                                <span class="label-icon">Search By User</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <span class="glyphicon glyphicon-book"></span>
                                                <span class="label-icon">Search By Organization</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </form>    
                    </li>
                    <li>@Html.ActionLink("Sell now" , "Create", "Lot",routeValues:null ,htmlAttributes: new {@class = "btn btn - block" })</li>
                
                </ul>
                @if (Model.GetType() == typeof(LoginModel))
                {
                    @Html.Partial("_LoginPartial", Model)
                }
                else
                {
                    @Html.Partial("_LoginPartial", new LoginModel())
                }
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class ="body jumbotron">
        @RenderBody();
    </div>
</div>

<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/AutocompleteSearch.js")' type="text/javascript"></script>

@RenderSection("scripts", required: false)
