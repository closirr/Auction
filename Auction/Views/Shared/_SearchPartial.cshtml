@Styles.Render("~/Content/css/Search.css")

<link href="@Url.Content("~/Content/Search.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/all.css")" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="row ">
		
        <nav class="navbar navbar-default ">
            <div class="nav nav-justified navbar-nav">
 
                <form class="navbar-form navbar-search search" role="search">
                    <div class="input-group">
                
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-search btn-default dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-search"></span>
                                <span class="label-icon">Search</span>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu pull-left" role="menu">
                                <li>
                                    <a href="#">
                                        <span class="glyphicon glyphicon-user"></span>
                                        <span class="label-icon">Search By User</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span class="glyphicon glyphicon-book"></span>
                                        <span class="label-icon">Search By Organization</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
        
                        <input type="text"class ="form-control " name="name" data-autocomplete-source='@Url.Action("AutocompleteSearch", "Lot")'/> 
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-search btn-default" id = "button-search">
                                GO
                            </button>
                         
                         
                        </div>
                    </div>  
                </form>   
         
            </div>
        </nav>
    </div>
</div>

<script type ="text/javascript">
    $(function () {
        $(".input-group-btn .dropdown-menu li a").click(function () {

            var selText = $(this).html();

            //working version - for single button //
            //$('.btn:first-child').html(selText+'<span class="caret"></span>');  

            //working version - for multiple buttons //
            $(this).parents('.input-group-btn').find('.btn-search').html(selText);
        });
    });
</script>
<script src='@Url.Content("~/Scripts/jquery-1.12.4.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.js")' type="text/javascript"></script>
@*for autocomplete*@
<script type="text/javascript">
    $(function () {
        $("[data-autocomplete-source]").each(function () {
            var target = $(this);
            target.autocomplete({ source: target.attr("data-autocomplete-source") });
        });
    });
</script>